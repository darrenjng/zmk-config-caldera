/ {
        keymap {     
                compatible = "zmk,keymap";

                BASE {
// ---------------------------------------------------------------------------------
// |  ESC |  1  |  2  |  3  |  4  |  5  |-----|  6  |  7  |  8  |  9  |  0  | BKSP |
// |  TAB |  Q  |  W  |  E  |  R  |  T  |-----|  Y  |  U  |  I  |  O  |  P  |  \   |
// | CAPS |  A  |  S  |  D  |  F  |  G  |-----|  H  |  J  |  K  |  L  |  ;  |  ENT |  
// | SHFT |  Z  |  X  |  C  |  V  |  B  |-----|  N  |  M  |  ,  |  .  |  /  | SHFT |
// | CTRL | SPC |ALOW | LOW | ALT | CMD |-----| SPC | LOW |ALOW |  '  |      |      |
// ---------------------------------------------------------------------------------

                        bindings = <
   &kp ESC    &kp N1     &kp N2    &kp N3     &kp N4     &kp N5               &kp N6     &kp N7  &kp N8     &kp N9    &kp N0    &kp BSPC
   &kp TAB    &kp Q      &kp W     &kp E      &kp R      &kp T                &kp Y      &kp U   &kp I      &kp O     &kp P     &kp BSLH
   &kp CAPS   &kp A      &kp S     &kp D      &kp F      &kp G                &kp H      &kp J   &kp K      &kp L     &kp SEMI  &kp RET
   &kp LSHFT  &kp Z      &kp X     &kp C      &kp V      &kp B                &kp N      &kp M   &kp COMMA  &kp DOT   &kp FSLH  &kp RSHFT
   &kp LCTRL  &kp SPACE  &mo 3     &mo 2      &kp LALT   &kp LGUI             &kp SPACE  &mo 2   &mo 3      &kp APOS  &trans    &trans
                        >;
                };
                ALT_BASE {
// ---------------------------------------------------------------------------------
// |  ESC |  1  |  2  |  3  |  4  |  5  |-----|  6  |  7  |  8  |  9  |  0  | BKSP |
// |  TAB |  Q  |  W  |  E  |  R  |  T  |-----|  Y  |  U  |  I  |  O  |  P  |  \   |
// | CAPS |  A  |  S  |  D  |  F  |  G  |-----|  H  |  J  |  K  |  L  |  ;  |  ENT |  
// | SHFT |  Z  |  X  |  C  |  V  |  B  |-----|  N  |  M  |  ,  |  .  |  /  | SHFT |
// | CTRL | LOW |  '  | ALT | CMD | SPC |-----| SPC | LOW |LARW |UARW |DARW | RARW |
// ---------------------------------------------------------------------------------

                        bindings = <
   &kp ESC    &kp N1     &kp N2    &kp N3     &kp N4     &kp N5               &kp N6     &kp N7  &kp N8     &kp N9    &kp N0    &kp BSPC
   &kp TAB    &kp Q      &kp W     &kp E      &kp R      &kp T                &kp Y      &kp U   &kp I      &kp O     &kp P     &kp BSLH
   &kp CAPS   &kp A      &kp S     &kp D      &kp F      &kp G                &kp H      &kp J   &kp K      &kp L     &kp SEMI  &kp RET
   &kp LSHFT  &kp Z      &kp X     &kp C      &kp V      &kp B                &kp N      &kp M   &kp COMMA  &kp DOT   &kp FSLH  &kp RSHFT
   &kp LCTRL  &mo 2  &kp APOS  &kp LALT   &kp LGUI   &kp SPACE             &kp SPACE  &mo 2   &kp LARW   &kp UARW  &kp DARW  &kp RARW
                        >;
                };
                BASE_LOWER {
// ------------------------------------------------------------------------------------------------------------
// | BKSP  |  DEL  |  SPC  |       |       |       |----------|TOGLAYR|  BT1  |  BT2  |  BT3  |  BT4  |        |   
// |PREVTAB| VOL DN| VOL UP| ENTER |       |       |----------|       |LBRACE |RBRACE |       |       |        |   
// |NEXTTAB|  BTT6 |  BTT7 |  BTT9 |  BTT0 | BTT12 |----------|       |  LPAR |  RPAR |   -   |   =   |   ~    |   
// | ZM IN |  BTT1 |  BTT2 |  BTT3 |  BTT8 |  BTT5 |----------|       |  LBKT |  RBKT |   _   |   +   |   `    |   
// |ZM OUT |SCRSTCP|  PREV |-------|  NEXT | PAUSE |----------|       |-------|-------|       | BTT11 |        |
// ------------------------------------------------------------------------------------------------------------


// BTT Map Left
// --------------------------------------------------------------
// | MovScrn    | ScrnStCrop | MissCtrl   | MinWin   | SplitEdge  |
// | File       |  Outlook   | VSCode     | Edge     | Zotero     |

// BTT Map Right
// --------------------------------------------------------------
// | -------- | -------- | -------- |

                        bindings = <
   &kp BSPC    &kp DEL       &kp SPACE     &trans       &trans         &trans           &tog 1   &bt BT_SEL 0    &bt BT_SEL 1    &bt BT_SEL 2   &bt BT_SEL 3   &trans
   &prev_tab   &kp C_VOL_DN  &kp C_VOL_UP  &kp RET      &trans         &trans           &trans   &kp LEFT_BRACE  &kp RIGHT_BRACE  &trans         &trans         &trans       
   &next_tab   &BTT_6        &BTT_12       &BTT_7       &BTT_9         &BTT_0           &trans   &kp LPAR        &kp RPAR        &kp MINUS      &kp EQUAL      &kp TILDE   
   &zoom_in    &BTT_1        &BTT_2        &BTT_3       &BTT_8         &BTT_5           &trans   &kp LBKT        &kp RBKT        &kp UNDER      &kp PLUS       &kp GRAVE   
   &zoom_out   &BTT_4        &kp C_PREV    &trans       &kp C_NEXT     &kp C_PP         &trans   &trans          &trans          &trans         &BTT_11        &trans      
                        >;
                };
                ALT_BASE_LOWER {
// ------------------------------------------------------------------------------------------------------------
// |       |       |       |       |       |       |----------|       |       |       |       |       |       |   
// |       |       |       |       |       |       |----------|       |       | UARW  |       |       |       |   
// |       |       |       |       |       |       |----------|       | LARW  | DARW  | RARW  |       |       |   
// |       |       |       |       |       |       |----------|       |       |       |       |       |       |   
// |       |       |       |-------|       |       |----------|       |-------|-------|       |       |       |
// ------------------------------------------------------------------------------------------------------------

                        bindings = <
   &trans       &trans         &trans   &trans       &trans         &trans           &trans       &trans         &trans    &trans       &trans         &trans
   &trans       &trans         &trans   &trans       &trans         &trans           &trans       &trans         &kp UARW  &trans       &trans         &trans     
   &trans       &trans         &trans   &trans       &trans         &trans           &trans       &kp LARW       &kp DARW  &kp RARW     &trans         &trans   
   &trans       &trans         &trans   &trans       &trans         &trans           &trans       &trans         &trans    &trans       &trans         &trans   
   &trans       &trans         &trans   &trans       &trans         &trans           &trans       &trans         &trans    &trans       &trans         &trans   
                        >;
                };
        };
